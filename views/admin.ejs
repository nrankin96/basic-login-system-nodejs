    <form action="/admin" method="post">
        <div class="accountHeader">
            <h4>Account</h4>
        <p>Edit your account settings and change your password here.</p>
        <hr>
        </div>
        <div class="form-group row formInput">
            <label for="staticEmail" class="labelTxt">Your email is: </label>
            <div class="formLabel">
              <input type="text" readonly class="form-control-plaintext labelTxt" id="staticEmail" value="<%= email %>">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Username:</label>
                <input type="text" class="form-control formLabel" id="exampleInputUsername1" placeholder="<%= username %>">
              </div>
        <div class="form-group">
          <label for="exampleInputPassword1">New Password:</label>
          <input type="password" class="form-control formLabel" id="exampleInputPassword1" placeholder="Password" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1"> Confirm Password:</label>
            <input type="password" class="form-control formLabel" id="exampleInputPassword1" placeholder="Confirm Password" required>
          </div>
          
        <button type="submit" class="btn btn-primary formbtn">Submit</button>
      </form>
        

    <script src="../login.js"></script>
    

</body>

